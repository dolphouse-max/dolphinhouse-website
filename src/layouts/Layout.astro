---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import ChatWidget from '../components/ChatWidget.astro';
const { title = "Dolphin House Beach Resort" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <!-- 🌐 Open Graph Meta Tags -->
<meta property="og:type" content="hotel" />
<meta property="og:title" content="Dolphin House Beach Resort | Luxury Stay at Nagaon Beach, Alibaug" />
<meta property="og:description" content="Stay at Dolphin House Beach Resort — luxury AC cottages, swimming pool, restaurant & Wi-Fi, just 2 minutes from Nagaon Beach, Alibaug. Book direct for best rates!" />
<meta property="og:image" content="https://dolphinhouse-website.pages.dev/uploader/dolphinhouse-front-4.webp" />
<meta property="og:url" content="https://dolphinhouse-website.pages.dev/" />
<meta property="og:site_name" content="Dolphin House Beach Resort" />
<meta property="og:locale" content="en_IN" />

<!-- 🐦 Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="Dolphin House Beach Resort | Alibaug" />
<meta name="twitter:description" content="Luxury resort at Nagaon Beach with AC rooms, pool, Wi-Fi & restaurant. Book your stay today!" />
<meta name="twitter:image" content="https://dolphinhouse-website.pages.dev/uploader/hotel-front-1.webp" />
<meta name="twitter:site" content="@dolphinhousealibaug" />

<!-- 💬 WhatsApp Preview Optimization -->
<meta name="theme-color" content="#0284c7" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/webp" />

    <link rel="icon" href="/uploader/logo-512.webp" />
  </head>
  <body class="min-h-screen flex flex-col bg-gray-50 text-gray-900">
    <Header />
    <main class="flex-1 max-w-7xl w-full mx-auto px-4 py-10">
      <slot />
    </main>
    <Footer />
    <ChatWidget />
  </body>
</html>
